#!/usr/bin/env node
const { argv } = require('node:process');

(function main() {
  const input = argv[2];

  if (!input) {
    return;
  }

  try {
    console.log(
      JSON.stringify(
        JSON.parse(input), 
        null, 
        2,
      ),
    );
  } catch {
    console.error('Invalid JSON format');
  }
}());
