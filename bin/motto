#!/usr/bin/env bash

declare Yellow='\033[1;33m'
declare NoColor='\033[0m'

clear
echo -e "${Yellow}>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
echo -e ">>> 马拉松是一项艰苦的运动，对我来说更像一种修行。<<<"
echo -e ">>> -- 基普乔格                                   <<<"
echo -e ">>>                                               <<<"
echo -e ">>> 胜人者有力，自胜者强。                        <<<"
echo -e ">>> -- 老子                                       <<<"
echo -e ">>>                                               <<<"
echo -e ">>> 㸌如羿射九日落，矫如群帝骖龙翔。              <<<"
echo -e ">>> 来如雷霆收震怒，罢如江海凝清光。              <<<"
echo -e ">>> -- 杜甫《剑器行》                             <<<"
echo -e ">>>                                               <<<"
echo -e ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>${NoColor}"
